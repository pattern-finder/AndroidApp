<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="178dp">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center"
            android:text="Visit Our Website" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fillViewport="true"
        android:scrollbars="horizontal|vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/challengeStart"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/challengecapture1" />

            <ImageView
                android:id="@+id/imagStart2"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/challengecapture2" />
            <ImageView
                android:id="@+id/imagstart3"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:layout_marginTop="18dp"
                android:src="@drawable/statsimag" />
        </LinearLayout>

        </HorizontalScrollView>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_marginTop="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/hand"
            android:layout_gravity="center"
            />
        <Button
            android:id="@+id/btnToWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="CLICK HERE" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
